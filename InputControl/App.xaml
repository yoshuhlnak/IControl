<Application x:Class="InputControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:InputControl.ViewModel"
             xmlns:view="clr-namespace:InputControl.View;assembly=DevExpressUI"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:ControlledItemViewModel}" >
            <view:ControlledItemView/>
        </DataTemplate>
    </Application.Resources>
</Application>
